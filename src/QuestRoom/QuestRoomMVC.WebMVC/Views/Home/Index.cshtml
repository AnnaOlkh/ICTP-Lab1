@{
    ViewData["Title"] = "RoomRunner";
}

<div class="container text-center mt-5">
    <div class="mb-4">
        <img src="/img/logo1.png" alt="Logo" style="height: 350px;" />
    </div>

    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="card bg-dark text-white p-4 rounded shadow-sm" style="max-width: 400px; margin: auto;">
            <h4>Вітаємо, @User.Identity.Name!</h4>

            <div class="d-grid gap-2 mt-3">
                <a asp-controller="Rooms" asp-action="Index" class="btn btn-secondary">Перейти до розкладу</a>

                <form method="post" asp-controller="Account" asp-action="Logout">
                    <button type="submit" class="btn btn-danger">Вихід</button>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-center gap-3 mb-4">
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary w-25">Вхід</a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light w-25">Реєстрація</a>
        </div>

        <a asp-controller="Rooms" asp-action="Index" class="btn btn-secondary">Переглянути розклад</a>
    }
</div>
