@{
    ViewData["Title"] = "RoomRunner";
}

<div class="container text-center mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="card bg-dark text-white p-4 rounded shadow-sm" style="max-width: 400px; margin: auto;">
            <h4>Вітаємо, @User.Identity.Name!</h4>

            <form method="post" asp-controller="Account" asp-action="Logout" class="mt-3">
                <button type="submit" class="btn w-100">Вихід</button>
            </form>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-center gap-3">
            <a asp-controller="Account" asp-action="Login" class="btn w-25">Вхід</a>
            <a asp-controller="Account" asp-action="Register" class="btn w-25">Реєстрація</a>
        </div>
    }
</div>
