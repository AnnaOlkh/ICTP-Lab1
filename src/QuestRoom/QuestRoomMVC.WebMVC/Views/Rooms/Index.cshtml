@model IEnumerable<QuestRoomMVC.Domain.Entities.Room>

@if (ViewBag.FilterType == "Genre")
{
    ViewData["Title"] = "Quest rooms by genre";
    <h1>Filtered by Genre: @ViewBag.FilterName</h1>
}
else if (ViewBag.FilterType == "Location")
{
    ViewData["Title"] = "Quest rooms by location";
    <h1>Filtered by Location: @ViewBag.FilterName</h1>
}else
{
    ViewData["Title"] = "Усі квест кімнати";
    <h3 class="text-center mt-4">Усі квест-кімнати</h3>
}
<p>
    @Html.ActionLink("Add new room", "Create")
    </p>

<div class="container mt-4">
    <div class="row">
        @foreach (var room in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card shadow-lg rounded-4 h-100">
                    <img src="@room.Image" class="card-img fixed-image" alt="@room.Name">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="fw-bold">@room.Name</h5>
                        <p class="small flex-grow-1">@room.Description</p>

                        <div class="d-flex justify-content-between">
                            <span class="badge bg-info">@room.Genre?.Name</span>
                            <span class="badge bg-secondary">@room.Location?.Name</span>
                        </div>

                        <div class="d-flex justify-content-between text-white">
                            <span>👥 @room.MaxPlayers гравців</span>
                            <span>⭐ @(room.Ratings.Any() ? room.Ratings.Average(r => r.Score).ToString("0.0") : "N/A")</span>
                        </div>

                        <div class="d-flex justify-content-between text-white">
                            <span>🎮 Складність: @room.Difficulty/5</span>
                            <a href="#" class="btn btn-primary btn-sm">Детальніше</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

